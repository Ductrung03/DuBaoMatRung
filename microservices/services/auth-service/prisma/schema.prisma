generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  username       String     @unique
  password_hash  String
  full_name      String
  position       String?
  organization   String?
  district_id    String?
  is_active      Boolean    @default(true)
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  last_login     DateTime?
  email          String?
  phone          String?
  avatar_url     String?
  userRoles      UserRole[]
  createdRoles   Role[]     @relation("RoleCreator")

  @@index([email])
  @@index([full_name])
  @@index([district_id])
  @@index([is_active])
  @@index([username])
}

model Role {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  description     String?
  is_system       Boolean          @default(false)
  is_active       Boolean          @default(true)
  created_at      DateTime         @default(now())
  updated_at      DateTime         @updatedAt
  created_by      Int?
  creator         User?            @relation("RoleCreator", fields: [created_by], references: [id], onDelete: SetNull)
  roleDataScopes  RoleDataScope[]
  rolePermissions RolePermission[]
  userRoles       UserRole[]

  @@index([name])
  @@index([created_at])
  @@index([is_system])
  @@index([is_active])
  @@index([created_by])
}

model Permission {
  id               Int              @id @default(autoincrement())
  code             String           @unique
  name             String
  description      String?
  module           String
  resource         String
  action           String
  parent_id        Int?
  is_active        Boolean          @default(true)
  created_at       DateTime         @default(now())
  updated_at       DateTime         @updatedAt
  icon             String?
  order            Int              @default(0)
  ui_path          String?
  ui_category      String?
  ui_element       String?
  parent           Permission?      @relation("PermissionHierarchy", fields: [parent_id], references: [id], onDelete: Cascade)
  children         Permission[]     @relation("PermissionHierarchy")
  rolePermissions  RolePermission[]

  @@unique([module, resource, action])
  @@index([code])
  @@index([module, resource])
  @@index([module])
  @@index([name])
  @@index([order])
  @@index([parent_id])
  @@index([is_active])
}

model UserRole {
  id          Int      @id @default(autoincrement())
  user_id     Int
  role_id     Int
  assigned_at DateTime @default(now())
  assigned_by Int?
  role        Role     @relation(fields: [role_id], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, role_id])
  @@index([role_id])
}

model RolePermission {
  id            Int        @id @default(autoincrement())
  role_id       Int
  permission_id Int
  created_at    DateTime   @default(now())
  permission    Permission @relation(fields: [permission_id], references: [id], onDelete: Cascade)
  role          Role       @relation(fields: [role_id], references: [id], onDelete: Cascade)

  @@unique([role_id, permission_id])
  @@index([permission_id])
}

model DataScope {
  id              Int             @id @default(autoincrement())
  type            String
  code            String          @unique
  name            String
  name_en         String?
  parent_id       Int?
  path            String
  level           Int
  is_active       Boolean         @default(true)
  DataScope       DataScope?      @relation("DataScopeToDataScope", fields: [parent_id], references: [id])
  other_DataScope DataScope[]     @relation("DataScopeToDataScope")
  RoleDataScope   RoleDataScope[]

  @@index([is_active])
  @@index([parent_id])
  @@index([path])
  @@index([type])
}

model RoleDataScope {
  id            Int       @id @default(autoincrement())
  role_id       Int
  data_scope_id Int
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  dataScope     DataScope @relation(fields: [data_scope_id], references: [id], onDelete: Cascade)
  role          Role      @relation(fields: [role_id], references: [id], onDelete: Cascade)

  @@unique([role_id, data_scope_id])
  @@index([role_id])
  @@index([data_scope_id])
}
