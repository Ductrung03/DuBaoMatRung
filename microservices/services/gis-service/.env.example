# GIS Service Environment

NODE_ENV=production
PORT=3003
LOG_LEVEL=info

# Database (PostGIS - port 5432 inside container, mapped to 5433 externally)
DB_HOST=postgis
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=gis_db

# JWT
JWT_SECRET=${JWT_SECRET}

# Redis (Docker network)
REDIS_HOST=redis
REDIS_PORT=6379

# MongoDB for Logging (Docker network)
MONGODB_URI="mongodb://mongodb:27017/logging_db"

# Google Earth Engine
GEE_SERVICE_ACCOUNT_EMAIL=
GEE_PRIVATE_KEY_PATH=
GEE_PROJECT_ID=

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads

# Gateway URL (Docker network)
GATEWAY_URL=http://gateway:3000
