# ========================================
# DuBaoMatRung Microservices Configuration
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ========== ENVIRONMENT ==========
NODE_ENV=development
LOG_LEVEL=info

# ========== API GATEWAY ==========
PORT=3000
FRONTEND_URL=http://localhost:5173

# ========== SECRETS (CHANGE IN PRODUCTION!) ==========
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# ========== DATABASE ==========
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-postgres-password-change-this
DB_NAME=dubaomatrung

# PostGIS
POSTGIS_HOST=postgis
POSTGIS_PORT=5432
POSTGIS_USER=postgres
POSTGIS_PASSWORD=your-postgis-password-change-this
POSTGIS_DB_NAME=gis_data

# ========== REDIS ==========
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-change-this

# ========== RABBITMQ ==========
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-rabbitmq-password-change-this

# ========== SERVICE URLS (Internal) ==========
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
GIS_SERVICE_URL=http://gis-service:3003
REPORT_SERVICE_URL=http://report-service:3004
ADMIN_SERVICE_URL=http://admin-service:3005
SEARCH_SERVICE_URL=http://search-service:3006

# ========== MONITORING ==========
PROMETHEUS_PORT=9090
GRAFANA_PORT=3100
GRAFANA_ADMIN_PASSWORD=your-grafana-password-change-this

JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://jaeger:14268/api/traces

# ========== EXTERNAL SERVICES ==========
# Google Earth Engine (if applicable)
EARTH_ENGINE_API_KEY=your-earth-engine-api-key

# Email Service (if applicable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# ========== RATE LIMITING ==========
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ========== FILE UPLOAD ==========
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/tmp/uploads
